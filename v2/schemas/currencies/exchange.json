{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://api.guildwars2.com/v2/",
    "title": "Commerce/Exchange Schema (v2)",
    "description": "This schema validates the results returned by the v2/commerce/listings node and all sub nodes.
        Thus it's going to validate calls to v2/commerce/listings?ids=all, v2/commerce/listings?ids={id(s)} and v2/commerce/listings/{id}, too.",
    "definitions": {
        "tradingpostItem": {
            "type": "object",
            "properties": {
                "id": { "type": "integer" },
                "buys": { "$ref": "#/definitions/listing"},
                "sells": { "$ref": "#/definitions/listing"}
            },
            "additionalProperties": false,
            "required":[
                "id",
                "buys",
                "sells"
            ]
        },
        "listing": {
            "type": "object",
            "properties": {
                "quantity": { "type": "integer" },
                "unit_price": { "type": "integer" }
            },
            "additionalProperties": false,
            "required": [
                "quantity",
                "unit_price"
            ]
        }
    },
    "anyOf": [{
            "type": "array",
            "items": { "type": "integer" }
        },
        {
            "type": "array",
            "items": {"$ref": "#/definitions/tradingpostItem" }
        },
        {
            "$ref": "#/definitions/tradingpostItem"
        }
    ]
}
