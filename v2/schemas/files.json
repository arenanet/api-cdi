{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://api.guildwars2.com/v2/files",
    "title": "Files Schema (v2)",
    "description": "This schema validates the results retunred by the v2/files node and all sub nodes.
        Thus it's going to validate calls to v2/files?ids=all, v2/files?ids={id(s)} and v2/files/{id}, too.",
    "definitions": {
        "fileSchema": {
            "type": "object",
            "properties": {
                "id": { "type": "string" },
                "icon": { "type": "string" }
            },
            "additionalProperties": false,
            "required":[
                "id",
                "icon"
            ]
        },
    },
    "anyOf": [{
            "type": "array",
            "items": { "type": "string" }
        },
        {
            "type": "array",
            "items": {"$ref": "#/definitions/fileSchema" }
        },
        {
            "$ref": "#/definitions/fileSchema"
        }
    ]
}
