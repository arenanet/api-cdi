{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://api.guildwars2.com/v2/colors_detail",
    "title": "v2/colors/{id}",
    "description": "This schema describes the json that is returned by the v2/colors/{id} endpoint.",
    "type": "object",
    "properties": {
        "id": { "type": "integer" },
        "name": { "type": "string" },
        "base_rgb": { "$ref": "definitions.json#/rgb_values" },
        "cloth": { "$ref": "definitions.json#/material_properties" },
        "leather": { "$ref": "definitions.json#/material_properties" },
        "metal": { "$ref": "definitions.json#/material_properties" }
    },
    "additionalProperties": false,
      "required": [
        "id",
        "name",
        "base_rgb",
        "cloth",
        "leather",
        "metal"
    ]
}
