{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://api.guildwars2.com/v2/quaggans",
    "title": "Quaggans Schema (v2)",
    "description": "This schema validates the results returned by the v2/quaggans node and all sub nodes.
        Thus it's going to validate calls to v2/quaggans?ids=all, v2/quaggans?ids={id(s)} and v2/quaggans/{id}, too.",
    "definitions": {
        "quaggan": {
            "type": "object",
            "properties": {
                "id": {
                    "anyOf": [
                        { "type": "integer" },
                        { "type": "string" }
                    ]
                },
                "url": { "type": "string" }
            },
            "additionalProperties": false,
            "required": [
                "id",
                "url"
            ]
        }
    },
    "anyOf": [
        {
            "type": "array",
            "items": {
                "anyOf":
                [
                    { "type": "integer" },
                    { "type": "string" }
                ]
            }
        },
        {
            "type": "array",
            "items": {"$ref": "#/definitions/quaggan" }
        },
        {
            "$ref": "#/definitions/quaggan"
        }
    ]
}
